<Window x:Class="aquaparko.YourPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aquaparko"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Ваш пароль" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" Margin="300 5" FontSize="25" Text="Ваш пароль:"/>
            <TextBox Text="{Binding Password}" IsReadOnly="True" FontSize="25" Margin="100 5"/>
            <TextBlock FontSize="15" HorizontalAlignment="Center">
                <Hyperlink Click="BackTo">Вернуться к окну входа</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>

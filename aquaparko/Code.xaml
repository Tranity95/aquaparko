<Window x:Class="aquaparko.Code"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aquaparko"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Окно с кодом" Height="150" Width="150">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" Text="Код:"/>
            <TextBox MinWidth="80" Text="{Binding Codo}" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
